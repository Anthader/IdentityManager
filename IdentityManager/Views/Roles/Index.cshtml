@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Role List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">Create Role</a>
    </div>

</div>

<div class="p-4 border rounded">
    @if (Model.Any()) {
        <table class="table table-striped border table-hover">
            <tr class="table-secondary">
                <th>ID</th>
                <th>Name</th>
                <th>Commands</th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>

                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-info text-white" style="cursor:pointer">Edit</a>

                            <button type="submit" onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-danger">
                                Delete
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </table>

    }
</div>