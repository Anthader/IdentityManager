@model ApplicationUser

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" method="post">
                <input asp-for="@Model.Id" hidden />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" readonly class="form-control" />
                    <input asp-for="@Model.Email" hidden />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.RoleId"></label>
                    <select asp-for="@Model.RoleId" asp-items="@Model.RoleList" class="form-control" >
                        <option disabled selected>---Select Role---</option>
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Update</button>
                    <a asp-action="Index">Back To User</a>
                </div>
            </form>
        </div>
    </div>